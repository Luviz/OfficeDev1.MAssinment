@model MAssinment01App.ODA1Web.Models.Customer

<style>
	div .customerCard:hover {
		background-color:lightgray;
	}
	.customerCard img {
		margin-top: 1em;
	}
</style>

<div class="row customerCard" data-href="@Url.Action("Details", "Customer",new {id = Model.ID})?SPHostUrl=@Request.QueryString.Get("SPHostURL")">
	<div class="col-md-3">

		<img src="@Model.Logo" height="100px"  alt="Alternate Text" />
	</div>
	<div class="col-md-9">

		<dl class="dl-horizontal ">
			<dt>Title: </dt>
			<dd> @Model.Title</dd>
			<dt>Contact Person: </dt>
			<dd> @Model.ContactPerson</dd>
			<dt>Mobile: </dt>
			<dd> @Model.Mobile</dd>
			<dt>E-mail: </dt>
			<dd> @Model.Email</dd>
			<dt>Created: </dt>
			<dd> @Model.Created</dd>
		</dl>
	</div>
</div>